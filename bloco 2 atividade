#include <iostream>
using namespace std;

// Função que retorna o maior entre dois floats
float maior(float a, float b) {
    return (a > b) ? a : b;
}

10)
int main() {
    float num1, num2;

    cout << "Digite dois numeros reais: ";
    cin >> num1 >> num2;

    float resultado = maior(num1, num2);

    cout << "O maior numero é: " << resultado << endl;

    return 0;
}
