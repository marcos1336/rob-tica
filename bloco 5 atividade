// Simulação do funcoes.h omitida (precisa de dois arquivos)

float calcularMediaVetor(int* v, int tamanho) {
    int soma = 0;
    for (int i = 0; i < tamanho; i++) soma += v[i];
    return soma / (float)tamanho;
}

24)
void inverterSinal(int &valor) {
    valor = -valor;
}
