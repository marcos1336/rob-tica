void menu() {
    int op, a, b;
    cout << "1-Soma 2-Sub 3-Mult: ";
    cin >> op >> a >> b;
    if (op == 1) cout << a + b;
    else if (op == 2) cout << a - b;
    else if (op == 3) cout << a * b;
}
