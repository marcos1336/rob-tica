cpp
Copiar
Editar
#define LIMITE 1000

float saldo = 0;

void saque(float valor) {
    if(valor <= saldo) saldo -= valor;
}

void deposito(float valor) {
    if(valor <= LIMITE) saldo += valor;
}

void consulta() {
    cout << "Saldo: " << saldo << endl;
}
