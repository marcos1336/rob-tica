cpp
Copiar
Editar
template <typename T>
void trocarPonteiros(T* a, T* b) {
    T temp = *a;
    *a = *b;
    *b = temp;
}
30. (Exemplo simples integrando m√∫ltiplos conceitos)

Arquivo funcoes.h

cpp
Copiar
Editar
#pragma once
void trocar(int&, int&);
void incrementar(int*);
Arquivo funcoes.cpp

cpp
Copiar
Editar
#include "funcoes.h"

void trocar(int &a, int &b) {
    int temp = a;
    a = b;
    b = temp;
}

void incrementar(int* p) {
    (*p)++;
}

#include <iostream>
#include "funcoes.h"
using namespace std;

int main() {
    int x = 5, y = 10;
    trocar(x, y);
    cout << x << " " << y << endl;
    incrementar(&x);
    cout << x << endl;
}
