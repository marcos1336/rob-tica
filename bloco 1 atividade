#include <iostream>
using namespace std;

int main() {
    int i = 10;
    float f = 3.14f;
    double d = 2.718281;
    char c = 'A';
    bool b = true;

    cout << "int: " << i << endl;
    cout << "float: " << f << endl;
    cout << "double: " << d << endl;
    cout << "char: " << c << endl;
    cout << "bool: " << b << endl;

    return 0;
}

2)
#include <iostream>
using namespace std;

int main() {
    int a, b;

    cout << "Digite dois numeros inteiros: ";
    cin >> a >> b;

    cout << "Soma: " << a + b << endl;
    cout << "Subtracao: " << a - b << endl;
    cout << "Multiplicacao: " << a * b << endl;
    if (b != 0)
        cout << "Divisao: " << (float)a / b << endl;
    else
        cout << "Divisao por zero nao permitida!" << endl;

    return 0;
}

3)
#include <iostream>
#define PI 3.14159
using namespace std;

int main() {
    float raio;

    cout << "Digite o raio do circulo: ";
    cin >> raio;

    float area = PI * raio * raio;
    cout << "Area do circulo: " << area << endl;

    return 0;
}

4)
#include <iostream>
using namespace std;

int main() {
    int a = 5;
    float b = 5.0f;
    double c = 5.0;

    cout << "int / 2 = " << a / 2 << endl;
    cout << "float / 2 = " << b / 2 << endl;
    cout << "double / 2 = " << c / 2 << endl;

    return 0;
}

5)
#include <iostream>
#include <string>
using namespace std;

int main() {
    string nome;
    int idade;

    cout << "Digite seu nome: ";
    getline(cin, nome);

    cout << "Digite sua idade: ";
    cin >> idade;

    cout << "Bem-vindo, " << nome << "! VocÃª tem " << idade << " anos." << endl;

    return 0;
}

